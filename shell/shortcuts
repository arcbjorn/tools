# Shell shortcuts and aliases

# Git shortcuts
alias gstat='git status'
alias gd='git diff'
alias ga='git add'
alias gc='git commit'
alias gp='git push'
alias gl='git log --oneline'
alias gb='git branch'
alias gco='git checkout'
alias gcb='git checkout -b'
alias gm='git merge'
alias grs='git reset --soft'
alias grh='git reset --hard'
alias git-reset-hard='git reset --hard HEAD && git clean -fd'
alias gst='git stash'
alias gstp='git stash pop'
alias pgp='pass git push'
alias lg='lazygit'

# File listing shortcuts (eza compatible)
alias ll='ls -la'
alias la='ls -A'
alias l='ls -GF'

# Claude shortcuts
alias cc='claude'
alias ccc='claude --continue'
alias glmc='glm --continue'

# SSH/Network shortcuts
alias connect-base='tailscale ssh admin@base'
alias connect-nova='tailscale ssh admin@nova'
alias connect-network='tailscale status'

# GitHub shortcuts
alias view-repo='gh repo view --web'

# Show all shortcuts with syntax highlighting
shortcuts() {
    echo ""
    echo "=== Shell Shortcuts ==="
    echo ""

    echo "Git Commands:"
    cat ~/tools/shell/shortcuts | grep "^alias g" | sort | bat --language=bash --style=plain --color=always
    echo ""

    echo "File Listing:"
    cat ~/tools/shell/shortcuts | grep "^alias l" | sort | bat --language=bash --style=plain --color=always
    echo ""

    echo "Claude:"
    cat ~/tools/shell/shortcuts | grep "^alias c" | sort | bat --language=bash --style=plain --color=always
    echo ""

    echo "SSH/Network:"
    cat ~/tools/shell/shortcuts | grep "^alias connect-" | sort | bat --language=bash --style=plain --color=always
    echo ""

    echo "GitHub:"
    cat ~/tools/shell/shortcuts | grep "^alias view-" | sort | bat --language=bash --style=plain --color=always
    echo ""
}
